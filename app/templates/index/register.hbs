
<div class="main-register">
    <div class="register-form-main fadeIn">
        <form class="register-form" {{action 'registerUser' on='submit'}}>
            <h2 class="register-form-heading">welcome to crewlo!</h2>
            <label for="email" class="sr-only">Email</label>
            {{input type="email" id='email' class="form-control" placeholder='Email Address' value=email}}
            <label for="username" class="sr-only">Username</label>
            {{input id='username' class="form-control" placeholder="Username" value=username}}
            <label for="password" class="sr-only">Password</label>
            {{input id='password' class="form-control" placeholder='Password' type='password' value=password}}
            {{#if errorMessage}}
                <p>{{errorMessage}}</p>
            {{/if}}
            <button class="btn btn-primary btn-block" type="submit">Register</button>
            <p class="signup">Already have a crewlo account? <a {{action 'fadeOutToLogin'}}>Sign in!</a></p>
        </form>
    </div>
</div>
